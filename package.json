{
  "name": "graphql-node",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "check-types": "tsc --noEmit",
    "start": "ts-node src",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src",
    "docker": "cd prisma && docker-compose up",
    "prisma:setup": "npm run prisma:gen && npm run prisma:deploy && npm run prisma:seed",
    "prisma:gen": "cd prisma && prisma generate",
    "prisma:deploy": "cd prisma && prisma deploy",
    "prisma:seed": "cd prisma && prisma seed"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "git reset"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@queso/identity": "^1.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.2",
    "bcryptjs": "2.4.3",
    "graphql": "^14.4.2",
    "graphql-yoga": "1.18.1",
    "jsonwebtoken": "8.5.1",
    "nexus": "^0.12.0-beta.6",
    "nexus-prisma": "^0.3.7",
    "prisma-client-lib": "1.34.3",
    "ts-node": "^8.3.0",
    "typescript": "3.4.x"
  },
  "devDependencies": {
    "@divyenduz/ts-graphql-plugin": "^0.1.0",
    "@playlyfe/gql": "^2.6.1",
    "concurrently": "^4.1.1",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "nexus-prisma-generate": "^0.3.7",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.40"
  }
}
